<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="@dimen/dp290"
	android:layout_height="@dimen/dp210"
	android:layout_gravity="center"
	android:background="@mipmap/gold_note_bg"
	android:orientation="vertical"
	android:padding="@dimen/dp30"
	android:gravity="bottom|left"
	>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="VIP会员自购商品可抵扣积分省"
			android:textSize="@dimen/dp14"
			/>
		
		<TextView
			android:id="@+id/gold_note_money1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="0"
			android:textSize="@dimen/dp14"
			android:textColor="@color/price_now"
			/>
		
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="元"
			android:textSize="@dimen/dp14"
			android:textColor="@color/price_now"
			/>
		
	</LinearLayout>
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/dp30"
		android:orientation="horizontal"
		>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="推广非VIP会员购买商品赚佣金"
			android:textSize="@dimen/dp14"
			/>
		
		<TextView
			android:id="@+id/gold_note_money2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="0"
			android:textSize="@dimen/dp14"
			android:textColor="@color/price_now"
			/>
		
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="元"
			android:textSize="@dimen/dp14"
			android:textColor="@color/price_now"
			/>
		
	</LinearLayout>
</LinearLayout>