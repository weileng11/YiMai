<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_margin="@dimen/dp10"
	android:layout_gravity="center"
	android:orientation="vertical"
	app:cardBackgroundColor="@color/colorBackground"
	app:cardCornerRadius="@dimen/card_corner"
	app:cardElevation="@dimen/card_elevation"
	>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:orientation="vertical"
		>
		
		<ImageView
			android:id="@+id/f1_h5_image"
			android:layout_width="match_parent"
			android:layout_height="@dimen/dp120"
			android:src="@drawable/dft_item"
			android:scaleType="fitXY"
			/>
		
		<km.view.KmRecyclerView
			android:id="@+id/f1_h6_list"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="@dimen/_dp1"
			android:orientation="vertical"
			app:layoutManager="@string/GridLayoutManager"
			app:spanCount="2"
			tools:listitem="@layout/item_good_h"
			/>
	
	</LinearLayout>
</android.support.v7.widget.CardView>